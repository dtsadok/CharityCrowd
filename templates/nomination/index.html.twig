{% extends 'base.html.twig' %}

{% block title %}Nominations{% endblock %}

{% block body %}
    <h1>Nominations</h1>
    <h3>for {{month}} {{year}}</h3>

    <a class="nominate" href="{{ path('nomination_new') }}">Nominate Additional Charity</a>

    <table id="nominations" class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Pitch</th>
                <th>Created_at</th>
                <th>YES</th>
                <th>NO</th>
                <th>Allocation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nomination in nominations %}
            <tr>
                <td class="name">
                    <a href="/nomination/{{nomination.id}}">
                        {{ nomination.name }}
                    </a>
                </td>
                <td>{{ nomination.pitch }}</td>
                <td>{{ nomination.createdAt ? nomination.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="yes_votes">
                    {% if nomination.current %}
                        {{ include('nomination/_vote_yes_button.html.twig') }}
                    {% else %}
                        <span id="vote-{{nomination.id}}-yes" class="vote-yes">{{ nomination.yesCount }}</span>
                    {% endif %}
                </td>
                <td class="no_votes">
                    {% if nomination.current %}
                        {{ include('nomination/_vote_no_button.html.twig') }}
                    {% else %}
                        <span id="vote-{{nomination.id}}-no" class="vote-no">{{ nomination.noCount }}</span>
                    {% endif %}
                </td>
                <td class="allocation">
                    {{ nomination.percentage/100 }}%
                </td>
                <td>
                    <a href="{{ path('nomination_show', {'id': nomination.id}) }}">show</a>
                    <a href="{{ path('nomination_edit', {'id': nomination.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
