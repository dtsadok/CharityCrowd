{% extends 'base.html.twig' %}

{% block title %}Nominations{% endblock %}

{% block body %}
    <h1>Nominations</h1>

    <a class="nominate" href="{{ path('nomination_new') }}">Nominate Additional Charity</a>

    <table id="nominations" class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Pitch</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nomination in nominations %}
            <tr>
                <td>{{ nomination.name }}</td>
                <td>{{ nomination.pitch }}</td>
                <td>{{ nomination.createdAt ? nomination.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ nomination.updatedAt ? nomination.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('nomination_show', {'id': nomination.id}) }}">show</a>
                    <a href="{{ path('nomination_edit', {'id': nomination.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
